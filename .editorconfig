; Check http://editorconfig.org/ for more informations
; Top-most EditorConfig file
root = true

;cxx,hpp
[*.{cpp,h,c,sln}]
charset                  = utf-8-bom
end_of_line              = crlf
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = tab
indent_size              = 4

[*.{txt,md,xml,xsd,yml}]
indent_style             = space
indent_size              = 2

[*.{vcxproj,vcxproj.filters}]
charset                  = utf-8-bom
end_of_line              = crlf
trim_trailing_whitespace = true
insert_final_newline     = false
indent_style             = space
indent_size              = 2
